# Replace all "/mnt/d/TESTING_SPACE/" and "/mnt/d/EGEP_Nextflow/" with the right path in your system

// exonerate_clinker.config

// Pipeline-specific parameters
params {
    // Folder input
    base_folder = "/mnt/d/TESTING_SPACE/EGEP_Test_Data"  // Matches pipeline default
    
    // Processing input
    primary_genes = null  // No default, must be provided or genes_csv used
    secondary_genes = null  // No default, must be provided or genes_csv used
    data_type = "aa"  // Default to amino acid sequences
    genes_csv = null  // No default, optional input file
    in_genus = "Genus_Not_Provided"  // Default from pipeline
    out_label = "Unspecified-Genes"  // Default from pipeline
    
    // Compute resources
    ram_gb = 40  // Default RAM in GB from pipeline
    cpu_threads = 12  // Default CPU threads from pipeline
    
    // Other inputs
    output_dir = "${params.base_folder}/EGEP_exonerate_clinker"  // Matches pipeline default
    exonerate_pid = 0.9  // Default percent identity for Exonerate
    clinker_pid = 0.9  // Default percent identity for Clinker
    organism_kingdom = "Funga"  // Default kingdom from pipeline
    max_intron = 200  // Default max intron length from pipeline
}

// Process settings
process {
    cpus = params.cpu_threads  // Use cpu_threads parameter
    memory = "${params.ram_gb} GB"  // Use ram_gb parameter
    executor = 'local'  // Default to local executor
    container = '/mnt/d/EGEP_Nextflow/bin/entheome.sif'  // Default Singularity container from your run command
}

// Singularity settings
singularity {
    enabled = true  // Enable Singularity by default
    autoMounts = true  // Automatically mount host directories
    runOptions = '-B /mnt:/mnt'  // Bind mount /mnt for WSL compatibility
}

// Execution profiles
profiles {
    local {
        process.executor = 'local'  // Local execution
    }
    slurm {
        process.executor = 'slurm'  // SLURM execution
        process.queue = 'normal'  // Default SLURM queue
    }
    singularity {
        process.executor = 'local'  // Local execution with Singularity
        process.container = '/mnt/d/EGEP_Nextflow/bin/entheome.sif'  // Explicit container path
    }
}